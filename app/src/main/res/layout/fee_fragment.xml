<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_4"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llFeekidsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_4"
        android:orientation="vertical"
        android:visibility="visible">

        <ScrollView
            android:id="@+id/svFeeList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="200dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_kid_image_fee"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/person" />

                        <androidx.appcompat.widget.Toolbar
                            android:id="@+id/toolbarFeeList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:background="@android:color/transparent"
                            android:theme="@style/ToolbarColoredBackArrow"
                            app:contentInsetLeft="0dp"
                            app:contentInsetRight="0dp"
                            app:contentInsetStartWithNavigation="0dp"
                            app:navigationIcon="?attr/homeAsUpIndicator"
                            app:subtitle=""
                            app:title="" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvLogo"
                                    android:layout_width="100dp"
                                    android:layout_height="40dp"
                                    android:background="@drawable/custom_shape_slope" />

                                <TextView
                                    android:id="@+id/tv_school_name_fee"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tvLogo"
                                    android:background="@color/gray_2"
                                    android:fontFamily="@font/calibri_regular"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text="School name"
                                    android:textColor="@color/purle"
                                    android:textSize="@dimen/fourteen_sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:paddingLeft="10dp"
                                android:paddingTop="10dp"
                                android:paddingRight="15dp"
                                android:paddingBottom="5dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:cardUseCompatPadding="true">

                                    <ImageView
                                        android:id="@+id/iv_school_logo_fee"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/broken_image" />
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_4"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_kid_name_fee"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/gray_4"
                        android:fontFamily="@font/calibri_bold"
                        android:paddingLeft="@dimen/ten_dp"
                        android:paddingTop="@dimen/twelve_dp"
                        android:paddingRight="@dimen/twelve_dp"
                        android:paddingBottom="@dimen/ten_dp"
                        android:text="@string/kid_name"
                        android:textColor="@color/purle"
                        android:textSize="@dimen/tweenty_two_sp" />
                </LinearLayout>

                <View
                    android:id="@+id/vTab"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gray_4"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llTotalFeeSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/twelve_dp"
                        android:paddingTop="@dimen/ten_dp"
                        android:paddingRight="@dimen/twelve_dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvTotalFeeTitle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="9"
                                android:fontFamily="@font/calibri_bold"
                                android:gravity="left"
                                android:paddingBottom="@dimen/five_dp"
                                android:text="@string/total_fees"
                                android:textColor="@color/purle"
                                android:textSize="@dimen/tweenty_sp" />

                            <TextView
                                android:id="@+id/tvTotalFeeValueMain"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:fontFamily="@font/calibri_bold"
                                android:gravity="right"
                                android:paddingBottom="@dimen/eight_dp"
                                android:text=""
                                android:textColor="@color/purle"
                                android:textSize="@dimen/tweenty_sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:fontFamily="@font/calibri_regular"
                                android:gravity="left"
                                android:paddingBottom="@dimen/five_dp"
                                android:textColor="@color/gray_b"
                                android:textSize="@dimen/eighteen_sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/total_installment" />

                            <TextView
                                android:id="@+id/tvTotalInstallmentMain"
                                android:fontFamily="@font/calibri_regular"
                                android:gravity="right"
                                android:paddingBottom="@dimen/eight_dp"
                                android:textColor="@color/purle"
                                android:textSize="@dimen/eighteen_sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tvEmptyList"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="50dp"
                                android:fontFamily="@font/calibri_bold"
                                android:gravity="center"
                                android:text="Empty Fees List"
                                android:textColor="@color/purle"
                                android:textSize="@dimen/sixteen_sp"
                                android:visibility="gone" />

                            <com.mindorks.placeholderview.PlaceHolderView
                                android:id="@+id/phvFees"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_4"
                                android:orientation="vertical"
                                android:paddingLeft="7dp"
                                android:paddingRight="7dp"
                                android:paddingBottom="7dp"
                                android:visibility="visible" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTryAgain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/slow_network_icon" />

        <TextView
            android:id="@+id/btnTryAgain"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/calibri_regular"
            android:gravity="center_vertical|center_horizontal"
            android:justificationMode="inter_word"
            android:padding="@dimen/eight_dp"
            android:text="@string/please_try_again"
            android:textAllCaps="false"
            android:textColor="@color/gray"
            android:textSize="@dimen/eighteen_sp" />
    </LinearLayout>
</LinearLayout>